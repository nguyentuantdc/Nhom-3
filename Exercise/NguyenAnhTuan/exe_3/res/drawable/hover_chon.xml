<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF1493"
                android:endColor="#FF69B4"
                android:angle="270" />
            <!--viền-->
            <stroke
                android:width="2dp"

                android:color="#a03b0aec" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!--màu ngoài-->
            <gradient
                android:startColor="#8A2BE2"
                android:endColor="#FFC1C1"
                android:angle="270" />
            <!--viền-->
            <stroke
                android:width="2dp"

                android:color="#C0FF3E" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>